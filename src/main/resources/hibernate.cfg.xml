<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name = "hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">false</property>
        <!-- List of XML mapping files -->
        <!-- <mapping class="TestObj"/> -->
        <mapping class="org.example.model.Country"/>
        <mapping class="org.example.model.Brand"/>
        <mapping class="org.example.model.Model"/>
        <mapping class="org.example.model.Vehicle"/>
        <mapping class="org.example.model.Client"/>
        <mapping class="org.example.model.IndividualClient"/>
        <mapping class="org.example.model.CompanyClient"/>
        <mapping class="org.example.model.Employee"/>
        <mapping class="org.example.model.ServiceAdvisor"/>
        <mapping class="org.example.model.Mechanic"/>
        <mapping class="org.example.model.VehiclePassport"/>
        <mapping class="org.example.model.Order"/>
        <mapping class="org.example.model.FaultType"/>
        <mapping class="org.example.model.Fault"/>
        <mapping class="org.example.model.Diagnostics"/>
        <mapping class="org.example.model.WorkType"/>
        <mapping class="org.example.model.Work"/>
    </session-factory>
</hibernate-configuration>
